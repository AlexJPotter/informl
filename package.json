{
  "version": "0.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsc --noEmit && tsdx build --transpileOnly",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "vue": ">=3.2.37"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "informl",
  "author": "Alex Potter",
  "module": "dist/informl.esm.js",
  "size-limit": [
    {
      "path": "dist/informl.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/informl.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "7.0.8",
    "@vue/reactivity": "^3.2.37",
    "@vue/runtime-core": "^3.2.37",
    "@vue/tsconfig": "^0.1.3",
    "husky": "8.0.1",
    "size-limit": "7.0.8",
    "tsdx": "0.14.1",
    "tslib": "2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "immer": "^9.0.15"
  }
}
